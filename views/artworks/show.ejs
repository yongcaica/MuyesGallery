<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Muye's Gallery</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= artwork.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%=artwork.name%></a></h4>
                    <p><%= artwork.description %></p>
                </div>
            </div>
            <a class="btn btn-xs btn-warning" href="/artworks/<%= artwork._id %>/edit">Edit</a>
            <form id="delete-form" action="/artworks/<%= artwork._id %>?_method=DELETE" method="POST">
                <button class="btn btn-xs btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>