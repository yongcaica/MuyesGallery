<% include ../partials/header %>
<div class="container">
    <div class="row">

        <!-- 这里的artwork是通过id查询到的，需要edit的对象 -->
        
        <h1 style="text-align: center">Edit <%= artwork.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/artworks/<%= artwork._id %>?_method=PUT" method="POST">
                <div class="form-group">

                    <!--这里的name其实可以取任意的名字，后面的value才是表格中的值,value里面的artwork是通过id查询到的需要edit的对象-->
                    <!--如果用data[name]的话，那么这里的data是一个对象，后面name、image和description是它的三个属性，严格来说应该是"name", "image"和"description"-->

                    <input class="form-control" type="text" name="data[name]" value="<%= artwork.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[image]" value="<%= artwork.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="data[description]" value="<%= artwork.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/artworks">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

